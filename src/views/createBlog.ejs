          <div class="flex flex-grow items-center">
            <a href="/"><img src="<%- include ('partials/img.ejs') %>" width="50"></a>
          </div>
          <div class="flex lg:hidden">
            <i class="text-white fas fa-bars fa-2x" onclick="Menu();"></i>
          </div>
          <div id="menu" class="z-10 lg:flex hidden flex-grow justify-between absolute lg:relative lg:top-0 top-20 left-0
               backgroundes w-full py-14 lg:py-0 px-8 items-center sm:px-24">
            <div class="flex flex-col lg:flex-row mb-8 lg:mb-0">
              <a class="text-white hover:text-blue-500 transition duration-200 lg:mr-7 mb-8 lg:mb-0" href="/">Inicio</a>
              <a class="text-white hover:text-blue-500 transition duration-200 lg:mr-7 mb-8 lg:mb-0" href="/users">Usuarios</a>
              <a class="text-white hover:text-blue-500 transition duration-200 lg:mr-7 mb-8 lg:mb-0" href="/blogs">Blogs</a>
          </div>
          <div class="flex flex-col lg:flex-row text-center">
                <a class="text-white border border-gray-400 py-2.5 px-5 rounded-md hover:text-black hover:border-white hover:bg-white transition duration-200 lg:mr-7 mb-8 lg:mb-0" href="/profile">Perfil</a>
        </div>
        </div>
      </nav>

      <div class="p-32">
        <h1 class="text-center font-bold hover:text-blue-500 text-gray-800 transition duration-200 lg:text-5xl md:text-3xl mb-2">Crea un Blog Increible</h1>
      </div>  

      <section class="backgroundes flex justify-center">
        <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
            <div class="max-w-md w-full space-y-8">
              <div>
                <h1 class="text-center text-3xl font-extrabold text-center font-bold text-blue-500 transition duration-200">Â¡Sube tu Blog, Ahora!</h1>
              </div>
              <form class="mt-8 space-y-6" action="/create/blog" method="post">
                <input type="hidden" name="remember" value="true">
                <div class="rounded-md shadow-sm -space-y-px">
                  <div>
                    <input name="name" type="text" required class="mb-2 appearance-none rounded-none relative block w-full px-3 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-700 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Nombre">
                  </div>
                  <div>
                    <input name="imagen" type="text" required class="mb-2 appearance-none rounded-none relative block w-full px-3 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-700 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Imagen">
                  </div>
                  <div>
                    <input name="descripcion" type="text" required class="mb-2 appearance-none rounded-none relative block w-full px-3 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-700 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Descripcion">
                  </div>
                  <div>
                      <textarea name="blog" cols="20" class="appearance-none rounded-none relative block w-full px-3 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-700 focus:border-indigo-500 focus:z-10 sm:text-sm"" required placeholder="Contenido"></textarea>
                  </div>
                </div>
          
                <div>
                  <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                      <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                      </svg>
                    </span>
                    Subir Blog
                  </button>
                </div>
              </form>
            </div>
          </div>
          </section>

